<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- the targets to write -->
  <targets>
    <!-- write to file -->
    <target name="MegaSenaWebLog" xsi:type="File" fileName="${basedir}/logs/${shortdate}.log"
		layout="${longdate} ${uppercase:${level}} - ${message} - ${exception:format=StackTrace}${newline}" />
  </targets>
  <!-- rules to map from logger name to target -->
  <rules>
    <!-- all logs including Microsoft -->
    <logger name="*" minlevel="Trace" writeTo="MegaSenaWebLog" />
  </rules>
</nlog>